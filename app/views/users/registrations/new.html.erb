<div class="title-div"><h2 class="page-header">Sign Up</h2></div>

<div class="form-container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="row">
      <div class="form-input">
        <%= f.label :first_name, class: "hidden" %>
        <%= f.text_field :first_name, autofocus: true, placeholder: "First name" %>
      </div>
      <div class="form-input">
        <%= f.label :last_name, class: "hidden"%>
        <%= f.text_field :last_name, autofocus: true, placeholder: "Last name" %>
      </div>
    </div>

    <div class="row">
      <div class="form-input">
        <%= f.label :email, class: "hidden" %>
        <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
      </div>
    </div>

    <div class="row">
      <div class="form-input">
        <%= f.label :password, class: "hidden" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
      </div>
      <div class="form-input">
        <%= f.label :password_confirmation, class: "hidden" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password confirmation" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'btn-sm btn-signup' %>
    </div>
  <% end %>
</div>

<%= render "users/shared/links" %>
